<div class="queryfilterglobal">
	<form method="post">
		<input type="submit" value="Reset all filters" class="btn btn-custom-primary w-100"/>
	</form>
	<form id="edit_form" method="post" class="form form-floating">
		{% for key, data in metas %}
			{% if data|length > 0 %}
				<div class="queryfilter bg-white rounded shadow p-2 my-4">
					<p class="text-custom-secondary text-center"><b>FILTERS FOR TABLE {{ key|upper }}</b></p>
					{% for meta in data %}
						{% if meta.type == 'txt' %}
								{% include 'one_filter_txt.twig' with {'meta':meta, 'value':values[meta.id]}%}
						{% elseif meta.type == 'int' or meta.type == 'float' %}
								{% include 'one_filter_num.twig' with {'meta':meta, 'value':values[meta.id]}%}
						{% elseif meta.type == 'date' %}
								{% include 'one_filter_date.twig' with {'meta':meta, 'value':values[meta.id]}%}
						{% endif %}
					{% endfor %}
				</div>
			{% endif %}
		{% endfor %}
		<input type="submit" value="Set filters" class="btn btn-custom-primary mt-2 w-100"/>
	</form>
</div>