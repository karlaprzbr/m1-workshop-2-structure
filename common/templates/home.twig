{% extends 'base.twig' %}

{% block title 'Home' %}

{% block content %}

<main class="container-fluid">
    <div class="row mt-4">
        <!-- Sidebar -->
        <div class="col-12">
            <button class="btn btn-custom-primary d-block d-md-none w-100 my-4" id="filtresBtn">Open filters</button>
        </div>
        <div class="col-12 col-md-2 sidebar-light accordion d-none d-md-block" id="filtresBlock">
            <div>
                {% include 'filter_table.twig' %}
            </div>
        </div>
        <!-- End of Sidebar -->

        {# Start main content #}
        <div class="col-12 col-md-10">
            <div class="bg-white rounded shadow table-responsive">
                <table class="table">
                    <thead>           
                        {% for data in metas["record"] %}
                            <th>{{data["label"]}}</th>
                        {% endfor %}
                        <th></th>
                        {% for data in metas["production"] %}
                            <th>{{data["label"]}}</th>
                        {% endfor %}
                        <th></th>
                        {% for data in metas["speaker"] %}
                            <th>{{data["label"]}}</th>
                        {% endfor %}
                        <th></th>
                        <th></th>
                    </thead>
                    <tbody>
                        {% for data in results %}
                        <tr id="record{{ data["record_id"] }}">
                            {% include 'one_record.twig' with {'data': data, 'metas':metas} %}
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        {# End main content #}
    </div>
</main>

{% endblock %}